<div class="container">
  <div class="jumbotron">
    <h1>Join a Team</h1>
  </div>

  <% @teams.each do |team| %>
  <div class="row">
    <section id="team-listings">
        <div class="col-md-10">
          <%= team.team_name %> <br>
          <section id="team-members_<%= dom_id(team) %>">
            <%= team.participants.join(' ') %>
          </section>
        </div>
        <div class="col-md-2">
          <aside id="<%= dom_id(team) %>">
            <% unless team.participants.size == 6 %>
              <%= link_to 'Join Team', join_team_path(team), method: :patch, remote: true,
                           data: { disable_with: "Joining..."}, class: 'btn btn-primary join' %>
            <% end %>
          </aside>
        </div>
    </section>
  </div>
  <% end %>

</div><!-- end container -->
